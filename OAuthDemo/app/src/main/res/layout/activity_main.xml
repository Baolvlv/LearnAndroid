<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bwx.oauthdemo.MainActivity">
    <Button
        android:id="@+id/btn_oauth"
        android:text="Baidu OAuth"
        android:onClick="onClickOAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/tv_access_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_getInfo"
        android:text="Get Info"
        android:onClick="onClickGetInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_result_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
